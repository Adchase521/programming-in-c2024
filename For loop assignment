//preprocessor directive - scanf() , printf()
#include<stdio.h>
int main () {
    //Decleration and initialization 
    int start,sum,stop;
    printf("Enter the value for when start:");
    scanf("%d",&start);
    printf("Enter the value for when to stop:");
    scanf("%d",&stop);
    for(start;stop>=start;){
    printf("%d\n",start);
    //Calculate the sum
    start++;
    sum += start;
    }
    printf("The sum is %d",sum);
    return 0;
    }
